{% extends 'base.html.twig' %}
{% block titre_page %}Contact{% endblock %}
{% block container %}
    <div class="row justify-content-center">
        {% if alert is defined %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ alert }}
                <button type="button" class="close p-0" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}
        <div class="col-12 col-md-10 mt-3">
            {{ form_start(form, {'attr': {'id': 'form-contact'}}) }}
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.subject, "Sujet :", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.subject) }}

                <div class="col-sm-10 col-xl-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.name, "Votre nom :", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.name) }}

                <div class="col-sm-10 col-xl-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.email, "Votre email :", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.email) }}

                <div class="col-sm-10 col-xl-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.message, "Votre message :", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.message) }}

                <div class="col-sm-10 col-xl-12">
                    {# Génération de l'input. #}
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            {#<div id='recaptcha' class="g-recaptcha"#}
                 {#data-sitekey="6LfTwFgUAAAAAFjr1ou_RsY3zc8mzR2F1x8Uxcjk"#}
                 {#data-callback="onSubmit"#}
                 {#data-size="invisible"></div>#}

            <div class="form-group">
                <div class="col-sm-10 col-xl-12 text-center">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success col-12 col-md-4 g-recaptcha', 'data-sitekey': '6LfTwFgUAAAAAFjr1ou_RsY3zc8mzR2F1x8Uxcjk', 'data-callback': 'onSubmit'}}) }}
                </div>
            </div>

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}


            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}