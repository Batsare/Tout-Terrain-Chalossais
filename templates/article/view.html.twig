{% extends 'base.html.twig' %}
{% block title %}News {% endblock %}
{% block container %}

    <div class="row justify-content-end">
        <div class="col-xl-5">
            <div class="row justify-content-end">
                <div class="col-5"><p>
                        <a href="{{ path('article_home') }}" class="btn btn-outline-success">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            Retour à la liste
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-success">
                                <i class="glyphicon glyphicon-edit"></i>
                                Modifier l'article
                            </a>
                            <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                                Supprimer l'article
                            </a>
                        {% endif %}

                    </p>
                </div>
            </div>
        </div>
    </div>
    <div   class="row justify-content-md-start offset-1">
        <div class="thumbnail ">
            <a id="lightgalleryArticle" href="{{ article.image.webPath }}"><img src="{{ article.image.webPath }}" alt="" class="img-responsive col-10"></a>
            <div class="caption col-6">
                <div class="rounded-right bg-success">
                    <p class="h1">{{ article.title }}</p>
                </div>
            </div>
        </div>
    </div>


    <div class="row justify-content-md-center">
        <div class="col-xl-10">
            <hr>
        </div>
        <div class="fr-view col-md-10">
            {{ article.content |raw }}
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-xl-5">
            <div class="row justify-content-end">
                <div class="col-5"><p>
                        <a href="{{ path('article_home') }}" class="btn btn-outline-success">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            Retour à la liste
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-success">
                                <i class="glyphicon glyphicon-edit"></i>
                                Modifier l'article
                            </a>
                            <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                                Supprimer l'article
                            </a>
                        {% endif %}

                    </p>
                </div>
            </div>
        </div>
    </div>

    {#<div id="myModal" class="modal" role="dialog">#}
        {#<span class="close">&times;</span>#}
        {#<a id="lien_image_article" href=""><img class="img-responsive modal-content" src="" /></a>#}

    {#</div>#}

{% endblock %}