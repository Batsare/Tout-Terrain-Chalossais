{% extends 'base.html.twig' %}
{% block title %}News {% endblock %}
{% block container %}

    <div class="row justify-content-end mr-4">
        <div class="col-xl-6">
            <p>
                <a href="{{ path('article_home') }}" class="btn btn-outline-success">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Retour Ã  la liste
                </a>
                <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-success">
                    <i class="glyphicon glyphicon-edit"></i>
                    Modifier l'article
                </a>
                <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">
                    <i class="glyphicon glyphicon-trash"></i>
                    Supprimer l'article
                </a>
            </p>
        </div>
    </div>
    <div class="row justify-content-md-start offset-1">
        <div class="thumbnail text-center">
            <img src="{{ article.image.webPath }}" alt="" class="img-responsive">
            <div class="caption">
                <div class="col-xl-4 rounded-right bg-success">
                    <p class="h1">{{ article.title }}</p>
                </div>
            </div>
        </div>
    </div>


    <div class="row justify-content-md-center">
        <div class="col-xl-10">
            <hr>
        </div>
        <div class="fr-view col-md-10">
            {{ article.content |raw }}
        </div>
    </div>

    <div id="myModal" class="modal" role="dialog">
        <span class="close">&times;</span>
        <a id="lien_image_article" href=""><img class="img-responsive modal-content" src="" /></a>

    </div>

{% endblock %}