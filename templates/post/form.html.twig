<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}


    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.date, "Date de création", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.date) }}

        <div class="col-sm-10 col-xl-10">
            {# Génération de l'input. #}
            {{ form_widget(form.date, {'attr': {'class': 'form-inline'}}) }}
        </div>
    </div>

    {# Génération manuelle et éclatée : #}
    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.title, "Titre de l'annonce", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.title) }}

        <div class="col-sm-10 col-xl-10">
            {# Génération de l'input. #}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {# Idem pour un autre champ. #}
    <div class="form-group">
        {{ form_label(form.content, "Contenu de l'annonce", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}
        {{ form_errors(form.content) }}
        <div class="fr-view col-sm-10 col-xl-10">
            {{ form_widget(form.content | raw) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.author, "Auteur", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}
        {{ form_errors(form.author) }}
        <div class="col-sm-10 col-xl-10">
            {{ form_widget(form.author) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}
        {{ form_errors(form.image) }}
        <div class="col-sm-10 col-xl-10">
            {{ form_widget(form.image) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.categories, "Catégories", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}
        {{ form_errors(form.categories) }}
        <div class="col-sm-10 col-xl-10">
            {{ form_widget(form.categories) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.published, "Publier", {'label_attr': {'class': 'col-sm-2 col-md-4 control-label'}}) }}
        {{ form_errors(form.published) }}
        <div class="col-sm-10 col-xl-10">
            {{ form_widget(form.published) }}
        </div>
    </div>

    {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »). #}
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
</div>

