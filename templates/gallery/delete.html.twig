
{% extends "base.html.twig" %}

{% block title %}
    Supprimer un album - {{ parent() }}
{% endblock %}

{% block container %}
    <div class="row justify-content-end mr-1 ">
        <div class="h2 rounded bg-success text-white pl-2 pr-2">Supprimer un album</div>
    </div>
    <div class="row justify-content-center">

        <div class="row justify-content-md-center">
            <div class="col-xl-10">
                <hr>
            </div>
            <div class="fr-view col-xl-10">
                <p>
                    Etes-vous certain de vouloir supprimer l'annonce "{{ album.name }}" ?
                </p>
            </div>
            <div class="fr-view col-xl-10">
                <form action="{{ path('gallery_delete', {'id': album.id}) }}" method="post">
                    <a href="{{ path('gallery_view', {'id': album.id}) }}" class="btn btn-outline-success">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Retour à l'album
                    </a>
                    {# Ici j'ai écrit le bouton de soumission à la main #}
                    <input type="submit" value="Supprimer" class="btn btn-danger" />
                    {# Ceci va générer le champ CSRF #}
                    {{ form_rest(form) }}
                </form>
            </div>
        </div>

        {# On met l'id de l'annonce dans la route de l'action du formulaire #}

    </div>

{% endblock %}