
{% for message in messages %}
    <div id="post_guestbook" class="card">
        <div class="card-body">
            <div id="auhtor_guestbook" class="font-weight-bold"> {{ message.author }}</div>
            <div id="content_guestbook"> {{ message.content | raw | striptags("img")}}</div>
            <div id="date_guestbook" class="border-top"> {{ message.postedAt|date("d/m/Y H:i:s") }}</div>
        </div>
    </div>
{% endfor %}