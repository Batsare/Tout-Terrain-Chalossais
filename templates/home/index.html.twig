{% extends "base.html.twig" %}

{% block container %}


    <div class="row">
        <div class="col-12 col-md-6">
            <div class="row">
                <div class="col-lg-8 col-md-10 col-sm-6 col-12 ">
                    <h2 class="rounded-right bg-success text-white text-center">Article récent</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-11">
                    {{ render(controller("App\\Controller\\ArticleController:homeAction", {'limit': 1})) }}
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 ">
            <div class="row justify-content-end">
                <div class="col-lg-8 col-md-10 col-sm-6 col-12  ">
                    <h2 class="rounded-left bg-success  text-white text-center">Bla Bla récent</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-11">
                    {{ render(controller("App\\Controller\\GuestbookController:widgetAction", {'limit': 2})) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 col-md-6">
            <div class="row">
                <div class="col-lg-8 col-md-10 col-sm-6 col-12 ">
                    <h2 class="rounded-right bg-success text-white text-center">Facebook</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-11">
                    {{ render(controller("App\\Controller\\HomeController:facebookAction")) }}
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 ">
            <div class="row justify-content-end">
                <div class="col-lg-8 col-md-10 col-sm-6 col-12  ">
                    <h2 class="rounded-left bg-success text-white text-center">Albums photos</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-11">
                    {{ render(controller("App\\Controller\\GalleryController:widgetAction", {'limit': 4})) }}
                </div>
            </div>
        </div>
    </div>
   
{%  endblock %}